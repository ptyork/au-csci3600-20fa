@page
@model MiniLMS.Pages.SectionDetailsModel
@{
    ViewData["Title"] = "Section Details";

    var s = Model.Section;
}

<table>
  <tr>
    <th>
      Letter
    </th>
    <td>
      @s.SectionLetter
    </td>
  </tr>
  <tr>
    <th>
      Semester
    </th>
    <td>
      @s.Semester
    </td>
  </tr>
  <tr>
    <th>
      Max Students
    </th>
    <td>
      @s.MaxStudents
    </td>
  </tr>
  <tr>
    <th>
      Course Number
    </th>
    <td>
      @s.Course.Prefix @s.Course.Number
    </td>
  </tr>
  <tr>
    <th>
      Course Name
    </th>
    <td>
      @s.Course.Name
    </td>
  </tr>
  <tr>
    <th>
      Instructor
    </th>
    <td>
      @if (s.Instructor == null)
      {
        <text>Not Found</text>
        <a href="./AssignInstructor?id=@s.SectionId">Assign</a>
      }
      else
      {
        <text>@s.Instructor.FullName</text>
        <a href="./AssignInstructor?id=@s.SectionId">Change</a>
      }
    </td>
  </tr>
</table>
